{
  "manifest_version": 2,

  "name": "Python Coding Test",
  "description": "This posts a request at the testing service defined on heroku",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["popup.js",
        "bower_components/jquery-2.1.4.min/index.js"
         ]
      }
   ],
  "web_accessible_resources": [
    "template.html"
  ]
}
